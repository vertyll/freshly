<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude generated code -->
    <Match>
        <Package name="~.*\.generated\..*"/>
    </Match>

    <!-- Exclude test serialization issues -->
    <Match>
        <Class name="~.*Test"/>
        <Bug pattern="SE_BAD_FIELD,SE_NO_SERIALVERSIONID"/>
    </Match>

    <!-- Exclude MapStruct generated implementations -->
    <Match>
        <Class name="~.*MapperImpl"/>
    </Match>

    <!-- FindSecBugs: Ignore informational endpoints detection -->
    <Match>
        <Bug pattern="SPRING_ENDPOINT"/>
    </Match>

    <!-- FindSecBugs: Log injection is low risk in internal apps -->
    <Match>
        <Bug pattern="CRLF_INJECTION_LOGS"/>
    </Match>

    <!-- Exclude exposure of internal representation issues -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
    </Match>
</FindBugsFilter>
